<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mx.com.androiddes.soe" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/images"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MenuActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".HomeActivity"
            android:label="@string/title_activity_home"
            android:parentActivityName=".MenuActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="mx.com.androiddes.soe.MenuActivity" />
        </activity>
        <activity
            android:name=".ContenedorLocActivity"
            android:label="@string/title_activity_contenedor_loc"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".UserActivity"
            android:label="@string/title_activity_user"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".MenuEcoActivity"
            android:label="@string/title_activity_menu_eco"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".PlazaActivity"
            android:label="@string/title_activity_plaza"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>
